{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"javascript": {
		"parser": { "unsafeParameterDecoratorsEnabled": true },
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": { "useImportType": "off" }
		}
	},
	"formatter": {
		"lineWidth": 120,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}